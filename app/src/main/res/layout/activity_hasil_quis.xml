<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bagroundevaluasi"
    android:orientation="vertical"
    tools:context=".Evaluasi.HasilQuisActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="-30dp"
                android:translationZ="3dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_light"
                        android:text="Hasil Evaluasi"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/_18sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/namaSiswaHasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retno"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/_18sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:textSize="@dimen/_18sdp"
                    android:id="@+id/kelasHasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XII"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Benar:"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:id="@+id/benar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:text="Salah:"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:id="@+id/salah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>


                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai Kamu"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:textSize="@dimen/_20sdp"
                    android:id="@+id/hasilnilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                  >
                    <Button
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ulangi"
                        android:text="Ulangi"
                        android:fontFamily="@font/poppins_light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text"
                        android:backgroundTint="?colorPrimary"
                        android:layout_gravity="left"/>
                    <Button
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:id="@+id/home"
                        android:text="Home"
                        android:fontFamily="@font/poppins_light"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text"
                        android:backgroundTint="?colorPrimary"
                        android:layout_gravity="right"/>

                </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>