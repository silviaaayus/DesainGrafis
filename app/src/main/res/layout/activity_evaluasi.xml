    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bagroundevaluasi"
    android:orientation="vertical"
    tools:context=".Evaluasi.EvaluasiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

